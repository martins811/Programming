# Step 1: Define a tuple with five basic foods
tuple_menu = ("Pizza", "Burger", "Pasta", "Salad", "Soup")

# Step 2: Use a for loop to print each food item
def print_menu(menu):
    print("Menu:")
    for item in menu:
        print("-", item)

print_menu(tuple_menu)

# Step 3: Attempt to modify one item (this should fail)
try:
    tuple_menu[0] = "Sushi"
except TypeError as e:
    print("\nError:", e)

# Step 4: Update the menu by redefining the tuple
new_menu = ("Sushi", "Burger", "Pasta", "Tacos", "Soup")

# Step 5: Print the updated menu
print("\nUpdated Menu:")
print_menu(new_menu)
